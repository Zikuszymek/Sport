<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="ranking"
            type="com.mobile.ziku.sport.models.Ranking"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/club_ranking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="@{Integer.toString(ranking.rank)}"
            tools:text="1" />

        <TextView
            style="@style/BuleBoldText"
            android:id="@+id/club_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@{ranking.clubName}"
            tools:text="Manchester" />

        <TextView
            style="@style/BuleBoldText"
            android:id="@+id/club_total_maches"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="@{Integer.toString(ranking.matchesTotal)}"
            tools:text="1" />

        <TextView
            style="@style/BuleText"
            android:id="@+id/club_won_matches"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="@{Integer.toString(ranking.matchesWon)}"
            tools:text="1" />

        <TextView
            style="@style/BuleText"
            android:id="@+id/club_draw_matches"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="@{Integer.toString(ranking.matchesDraw)}"
            tools:text="1" />

        <TextView
            style="@style/BuleText"
            android:id="@+id/club_lost_matches"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="@{Integer.toString(ranking.matchesLost)}"
            tools:text="1" />

        <TextView
            style="@style/BuleText"
            android:id="@+id/club_GD_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="@{Integer.toString(ranking.goalsPro - ranking.goalsAgainst)}"
            tools:text="1" />

        <TextView
            style="@style/BuleBoldText"
            android:id="@+id/club_points"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="@{Integer.toString(ranking.points)}"
            tools:text="1" />

    </LinearLayout>

</layout>